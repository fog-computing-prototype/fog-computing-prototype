{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": [
    "**/node_modules",
    "**/.git",
    "**/.cache",
    "**/.tmp",
    "**/.temp",
    "**/.github",
    "**/.gitignore",
    "**/.vscode",
    "**/docker",
    "**/docs",
    "**/scripts",
    "**/build",
    "**/dist"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
